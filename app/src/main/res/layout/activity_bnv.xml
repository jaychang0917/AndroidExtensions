<?xml version="1.0" encoding="utf-8"?>
<com.jaychang.extensions.ui.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jaychang.extensions.ui.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:toolbar_leftIcon="@drawable/ic_back"
        app:toolbar_rightIcon="@drawable/reload"
        app:toolbar_rightIcon2="@drawable/reload"
        app:toolbar_title="Foo Bar" />

    <com.jaychang.extensions.ui.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9f7070"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/nav_text_color"
        app:itemIconTint="@color/nav_text_color"
        app:itemIconOnly="true"
        app:menu="@menu/menu" />

    <FrameLayout
        android:id="@+id/fragmentsContainer"
        android:layout_above="@id/bottomNavView"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.jaychang.extensions.ui.RelativeLayout>
